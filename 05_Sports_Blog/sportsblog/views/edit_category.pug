extends layout

block content
    .container 
        h1 #{title }
        form(method="post", action=`/categories/edit/${category._id}`)
            .form-group
                label Title:
                input.form-control(name='title',type='text', value=category.title)
                //- input.form-control(name='title',type='text',required)

            .form-group
                label Description:
                textarea.form-control(name='description') #{category.description}
            input.btn.btn-space.btn-primary(type="submit",name="submit",class="mr-3", value="Save 💾️")
            a.btn.btn-space.btn-dark(href='/manage/categories') Back ↩
            a.btn.btn-space.btn-danger.category-delete.float-end(href='/manage/categories', data-cat-id=category._id) Delete 🗑

